  end;
  // Sinopsis
  LineNr := FindLine('<b><u>Sinopsis:</u>', Page, 0);
  if LineNr > 0 then
  begin
    Item := copy(Page.Text, pos('<b><u>Sinopsis:</u>',Page.Text), length(Page.Text));
    Item := TextBetween (Item, '</b><br>', '<table width="100%">');
    Item := StringReplace(Item ,#13#10, '');
