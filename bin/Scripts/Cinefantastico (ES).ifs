  end;
  // Comentarios
  LineNr := FindLine('<b><u>Comentario:', Page, 0);
  if LineNr > 0 then
  begin
    Item := copy(Page.Text, pos('<b><u>Comentario:',Page.Text), length(Page.Text));
    Item := TextBetween (Item, '</u></b><br>', '</table>');
    Item := StringReplace(Item ,#13#10, '');
